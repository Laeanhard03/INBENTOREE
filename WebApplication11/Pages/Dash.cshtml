@section Scripts {
    <script>
        let contextMenuTargetId = null;
        let contextMenuTargetElement = null;
        const contextMenu = document.getElementById('contextMenu');
        const menuModal = document.getElementById('menuOptionsModal');
        const createModal = document.getElementById('createItemModal');
        const editModal = document.getElementById('editItemModal');
        const updateForm = document.getElementById('updateForm');
        const deleteForm = document.getElementById('deleteForm');
        let isMultiSelectMode = false;
        const selectedMultiIds = [];
        const multiSelectBar = document.getElementById('multiSelectBar');
        const allItemCards = document.querySelectorAll('.item-card');
        const selectedCountSpan = document.getElementById('selectedCount');
        const deleteCountSpan = document.getElementById('deleteCount');
        const multiSwitchBtn = document.getElementById('multiSwitchBtn');
        const massDeleteBtn = document.getElementById('massDeleteBtn');
        const swapItem1Input = document.getElementById('swap_item1');
        const swapItem2Input = document.getElementById('swap_item2');
        const massDeleteItemsInput = document.getElementById('mass_delete_items');
        const selectMoreToggle = document.getElementById('selectMoreToggle');
        const sariMenuBtn = document.getElementById('sariMenuBtn');
        const sariDropdown = document.getElementById('sariDropdown');
        const notifDropdown = document.getElementById('notifDropdown');

        function toggleMenuOptions(event) { event.stopPropagation(); if(menuModal) menuModal.classList.toggle('hidden'); }
        function toggleSariMenu(event) { event.stopPropagation(); if(sariDropdown) sariDropdown.classList.toggle('hidden'); }
        function toggleNotifications(event) { event.stopPropagation(); if(notifDropdown) notifDropdown.classList.toggle('hidden'); }

        document.addEventListener('click', (e) => {
             if (menuModal && !menuModal.classList.contains('hidden') && !menuModal.contains(e.target)) menuModal.classList.add('hidden');
             if (sariDropdown && !sariDropdown.classList.contains('hidden') && !sariDropdown.contains(e.target)) sariDropdown.classList.add('hidden');
             if (notifDropdown && !notifDropdown.classList.contains('hidden') && !document.getElementById('notifBtn').contains(e.target)) notifDropdown.classList.add('hidden');
             if (contextMenu && !contextMenu.classList.contains('hidden') && !contextMenu.contains(e.target)) { hideContextMenu(); clearContextMenuTargets(); }
        });

        // Notifications
        setInterval(async () => {
            try {
                const res = await fetch('/Dash?handler=FetchNotifications');
                const data = await res.json();
                const list = document.getElementById('notifList');
                const badge = document.getElementById('notifBadge');
                if(data.notifications && data.notifications.length > 0) {
                    badge.classList.remove('hidden');
                    let html = '';
                    data.notifications.forEach(n => {
                        let color = 'bg-gray-100';
                        if(n.type === 'order') color = 'bg-green-50 border-green-200';
                        else if(n.type === 'cart') color = 'bg-blue-50 border-blue-200';
                        html += `<div class="p-3 border-b border-gray-100 text-sm ${color}"><p class="text-gray-800">${n.message}</p><span class="text-xs text-gray-400 block mt-1">${new Date(n.timestamp).toLocaleTimeString()}</span></div>`;
                    });
                    list.innerHTML = html;
                } else {
                    badge.classList.add('hidden');
                    list.innerHTML = '<div class="p-4 text-center text-xs text-gray-400">No new notifications</div>';
                }
            } catch(e) {}
        }, 10000);

        async function clearNotifications() {
            const token = document.querySelector('input[name="__RequestVerificationToken"]').value;
            await fetch('/Dash?handler=ClearNotifications', { method: 'POST', headers: { 'RequestVerificationToken': token } });
            document.getElementById('notifList').innerHTML = '<div class="p-4 text-center text-xs text-gray-400">No new notifications</div>';
            document.getElementById('notifBadge').classList.add('hidden');
        }

        // Messages
        let lastGuestId = null;
        setInterval(async () => {
            try {
                const res = await fetch('/Dash?handler=FetchMessages');
                const data = await res.json();
                if(data.messages && data.messages.length > 0) {
                    const badge = document.getElementById('msgBadge');
                    if(badge) badge.classList.remove('hidden');
                    renderMessages(data.messages);
                }
            } catch(e) {}
        }, 5000);

        function openInboxModal() {
            document.getElementById('inboxModal').classList.remove('hidden');
            const badge = document.getElementById('msgBadge');
            if(badge) badge.classList.add('hidden');
        }

        function renderMessages(msgs) {
            const container = document.getElementById('msgContainer');
            if(!container) return;
            let html = '';
            msgs.forEach(m => {
                const align = m.sender === 'Seller' ? 'text-right' : 'text-left';
                const bg = m.sender === 'Seller' ? 'bg-indigo-100' : 'bg-white';
                html += `<div class="${align} mb-2"><span class="inline-block px-3 py-2 rounded-lg text-sm ${bg} shadow-sm max-w-xs break-words"><b>${m.sender}:</b> ${m.content}</span></div>`;
                if(m.sender !== 'Seller') lastGuestId = m.guestId;
            });
            container.innerHTML = html || '<p class="text-center text-gray-400 mt-10">No messages yet.</p>';
            container.scrollTop = container.scrollHeight;
        }

        async function sendReply(e) {
            e.preventDefault();
            const input = document.getElementById('replyInput');
            if(!input.value || !lastGuestId) return;
            const formData = new FormData();
            formData.append('guestId', lastGuestId);
            formData.append('content', input.value);
            const token = document.querySelector('input[name="__RequestVerificationToken"]').value;
            await fetch('/Dash?handler=ReplyMessage', { method: 'POST', body: formData, headers: { 'RequestVerificationToken': token } });
            input.value = '';
            const res = await fetch('/Dash?handler=FetchMessages');
            const data = await res.json();
            renderMessages(data.messages);
        }

        function triggerCustomConfirm(action) {
            const modal = document.getElementById('customConfirmModal');
            const title = document.getElementById('confirmTitle');
            const msg = document.getElementById('confirmMessage');
            const btn = document.getElementById('confirmActionBtn');
            modal.classList.remove('hidden');
            if(action === 'delete') {
                title.textContent = 'Delete Items?';
                msg.textContent = `Are you sure you want to permanently delete ${selectedMultiIds.length} item(s)?`;
                btn.textContent = 'Yes, Delete';
                btn.className = 'px-4 py-2 text-white bg-red-600 hover:bg-red-700 rounded-lg font-medium shadow-md transition-colors';
                btn.onclick = () => { closeCustomConfirm(); showSariThinking('Cleaning up inventory...'); document.getElementById('massDeleteForm').submit(); };
            } else if (action === 'swap') {
                title.textContent = 'Swap Positions?';
                msg.textContent = 'Swap the grid positions of these 2 items?';
                btn.textContent = 'Yes, Swap';
                btn.className = 'px-4 py-2 text-white bg-indigo-600 hover:bg-indigo-700 rounded-lg font-medium shadow-md transition-colors';
                btn.onclick = () => { closeCustomConfirm(); showSariThinking('Rearranging shelves...'); document.getElementById('multiSwitchForm').submit(); };
            }
        }
        function closeCustomConfirm() { document.getElementById('customConfirmModal').classList.add('hidden'); }

        function showSariThinking(message) {
            const bubble = document.getElementById('sariThinking');
            const text = document.getElementById('sariThinkingText');
            if(bubble && text) { text.textContent = message || "Thinking..."; bubble.classList.remove('hidden'); setTimeout(() => { bubble.classList.remove('translate-y-10', 'opacity-0'); }, 10); }
        }
        function hideSariThinking() {
            const bubble = document.getElementById('sariThinking');
            if(bubble) { bubble.classList.add('translate-y-10', 'opacity-0'); setTimeout(() => { bubble.classList.add('hidden'); }, 500); }
        }

        const nameInput = document.getElementById('new_name');
        const categoryInput = document.getElementById('new_category');
        const aiBadge = document.getElementById('aiCategoryBadge');
        if(nameInput && categoryInput) {
            nameInput.addEventListener('blur', async function() {
                const itemName = nameInput.value;
                const currentCat = categoryInput.value;
                if(itemName && !currentCat) {
                    showSariThinking("Guessing category...");
                    try {
                        const response = await fetch(`/Dash?handler=AiInsight&mode=categorize&input=${encodeURIComponent(itemName)}`);
                        const data = await response.json();
                        if(data.message) { categoryInput.value = data.message; aiBadge.classList.remove('hidden'); setTimeout(() => aiBadge.classList.add('hidden'), 3000); }
                    } catch (e) { } finally { hideSariThinking(); }
                }
            });
        }

        function openCreateModal() { menuModal.classList.add('hidden'); createModal.classList.remove('hidden'); }
        function closeCreateModal() { createModal.classList.add('hidden'); }
        function closeEditModal() { editModal.classList.add('hidden'); }
        function openStoreSettings() { menuModal.classList.add('hidden'); document.getElementById('storeSettingsModal').classList.remove('hidden'); }
        function hideContextMenu() { contextMenu.classList.add('hidden'); }
        function clearContextMenuTargets() { contextMenuTargetId = null; contextMenuTargetElement = null; }

        function prepareEditDeleteModal(action) {
            if (!contextMenuTargetId || !contextMenuTargetElement) return;
            const id = contextMenuTargetElement.getAttribute('data-item-id');
            const name = contextMenuTargetElement.getAttribute('data-item-name');
            const qty = contextMenuTargetElement.getAttribute('data-item-qty');
            const price = contextMenuTargetElement.getAttribute('data-item-price');
            const cost = contextMenuTargetElement.getAttribute('data-item-cost'); // NEW

            hideContextMenu();
            if (action === 'edit') {
                document.getElementById('editModalTitle').textContent = `Update Item: ${name}`;
                updateForm.classList.remove('hidden'); deleteForm.classList.add('hidden');
                document.getElementById('edit_id').value = id;
                document.getElementById('edit_name').value = name;
                document.getElementById('edit_qty').value = qty;
                document.getElementById('edit_price').value = price;
                document.getElementById('edit_cost').value = cost; // NEW
                document.getElementById('LogoFile_edit').value = '';
            } else if (action === 'delete') {
                document.getElementById('editModalTitle').textContent = `Confirm Deletion for: ${name}`;
                updateForm.classList.add('hidden'); deleteForm.classList.remove('hidden');
                document.getElementById('delete_id').value = id;
            }
            editModal.classList.remove('hidden');
            clearContextMenuTargets();
        }

        function handleContextMenu(e, element) {
            e.preventDefault();
            if (isMultiSelectMode) return;
            hideContextMenu();
            if(menuModal) menuModal.classList.add('hidden');
            contextMenuTargetId = element.getAttribute('data-item-id');
            contextMenuTargetElement = element;
            let x = e.clientX; let y = e.clientY;
            if (x + contextMenu.offsetWidth > window.innerWidth) x = window.innerWidth - contextMenu.offsetWidth - 5;
            if (y + contextMenu.offsetHeight > window.innerHeight) y = window.innerHeight - contextMenu.offsetHeight - 5;
            contextMenu.style.left = `${x}px`; contextMenu.style.top = `${y}px`;
            contextMenu.classList.remove('hidden');
        }

        function handleItemClick(e, element) {
            if (!contextMenu.classList.contains('hidden')) { hideContextMenu(); return; }
            if (isMultiSelectMode) { toggleMultiSelect(element.getAttribute('data-item-id'), element); }
        }

        if(selectMoreToggle) { selectMoreToggle.addEventListener('click', (e) => { e.preventDefault(); menuModal.classList.add('hidden'); enterMultiSelect(); }); }

        function enterMultiSelect() {
            isMultiSelectMode = true;
            multiSelectBar.classList.remove('hidden');
            selectMoreToggle.querySelector('span').textContent = 'Exit Select';
            allItemCards.forEach(card => card.classList.add('multi-select-active'));
            updateMultiSelectUI();
        }

        function exitMultiSelect() {
            isMultiSelectMode = false;
            multiSelectBar.classList.add('hidden');
            selectMoreToggle.querySelector('span').textContent = 'Select More Items';
            selectedMultiIds.length = 0;
            allItemCards.forEach(card => {
                card.classList.remove('multi-selected', 'border-indigo-500', 'ring-2', 'shadow-xl');
                card.classList.add('border-gray-100');
                const overlay = card.querySelector('.multi-select-overlay');
                if (overlay) { overlay.classList.add('hidden'); overlay.querySelector('svg').classList.remove('opacity-100'); }
            });
            updateMultiSelectUI();
        }

        function enterMultiSelectAndSelectCurrent() {
            if (contextMenuTargetId && contextMenuTargetElement) {
                const targetId = contextMenuTargetId;
                hideContextMenu(); clearContextMenuTargets(); enterMultiSelect();
                if (selectedMultiIds.indexOf(targetId) === -1) { toggleMultiSelect(targetId, contextMenuTargetElement); }
            }
        }

        function toggleMultiSelect(id, element) {
            const index = selectedMultiIds.indexOf(id);
            const overlay = element.querySelector('.multi-select-overlay');
            const checkmark = overlay ? overlay.querySelector('svg') : null;
            if (!overlay || !checkmark) return;
            if (index > -1) {
                selectedMultiIds.splice(index, 1);
                element.classList.remove('multi-selected', 'border-indigo-500', 'ring-2', 'shadow-xl');
                element.classList.add('border-gray-100');
                overlay.classList.add('hidden'); checkmark.classList.remove('opacity-100');
            } else if (isMultiSelectMode) {
                selectedMultiIds.push(id);
                element.classList.add('multi-selected', 'border-indigo-500', 'ring-2', 'shadow-xl');
                element.classList.remove('border-gray-100');
                overlay.classList.remove('hidden'); checkmark.classList.add('opacity-100');
            }
            updateMultiSelectUI();
        }

        function updateMultiSelectUI() {
            const count = selectedMultiIds.length;
            selectedCountSpan.textContent = count;
            const btnSpan = document.getElementById('deleteCount');
            if(btnSpan) btnSpan.textContent = `(${count})`;
            const canSwitch = count === 2;
            multiSwitchBtn.disabled = !canSwitch;
            multiSwitchBtn.classList.toggle('opacity-50', !canSwitch);
            if (canSwitch) { swapItem1Input.value = selectedMultiIds[0]; swapItem2Input.value = selectedMultiIds[1]; }
            else { swapItem1Input.value = ""; swapItem2Input.value = ""; }
            const canDelete = count > 0;
            massDeleteBtn.disabled = !canDelete;
            massDeleteBtn.classList.toggle('opacity-50', !canDelete);
            if (canDelete) { massDeleteItemsInput.value = selectedMultiIds.join(','); }
            else { massDeleteItemsInput.value = ""; }
        }

        async function askSari(mode) {
            const modal = document.getElementById('aiModal');
            const responseBox = document.getElementById('aiResponse');
            const dropdown = document.getElementById('sariDropdown');
            if(dropdown) dropdown.classList.add('hidden');
            showSariThinking("Analyzing...");
            try {
                const response = await fetch(`/Dash?handler=AiInsight&mode=${mode}`);
                const data = await response.json();
                hideSariThinking();
                responseBox.textContent = "";
                modal.classList.remove('hidden');
                typeWriter(data.message, responseBox);
            } catch (err) { hideSariThinking(); alert("Sari is sleeping."); }
        }

        function typeWriter(text, element) {
            let i = 0;
            const speed = 15;
            function type() {
                if (i < text.length) {
                    element.textContent += text.charAt(i);
                    i++;
                    const container = element.parentElement; container.scrollTop = container.scrollHeight;
                    setTimeout(type, speed);
                }
            } type();
        }
    </script>
}