@page
@model WebApplication11.Pages.DashModel
@using WebApplication11.Pages
@using System
@{
    ViewData["Title"] = "Inventory Management";
    var iconDataList = new[] {
        new { Color = "text-indigo-600", BgColor = "bg-indigo-100", Path = "M6 2L3 6v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2V6l-3-4zM3.8 6h16.4M15 10a3 3 0 1 1-6 0" },
        new { Color = "text-green-600", BgColor = "bg-green-100", Path = "M12 20H4a2 2 0 0 1-2-2V6a2 2 0 0 1 2-2h16a2 2 0 0 1 2 2v6m-4 4h4a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2H4a2 2 0 0 0-2 2v10a2 2 0 0 0 2 2h8" },
        new { Color = "text-blue-600", BgColor = "bg-blue-100", Path = "M18 10h-2M2 14v2a2 2 0 0 0 2 2h16a2 2 0 0 0 2-2v-2M4 10a2 2 0 0 1 2-2h12a2 2 0 0 1 2 2v4a2 2 0 0 1-2 2H6a2 2 0 0 1-2-2v-4z" },
        new { Color = "text-yellow-600", BgColor = "bg-yellow-100", Path = "M6.5 1h11a.5.5 0 0 1 .5.5v11.5L12 18.5 6 13V1.5a.5.5 0 0 1 .5-.5z" }
    };
    var iconCount = iconDataList.Length;
    var index = 0;
}

<div class="flex flex-col space-y-6">

    @* --- TOP BAR --- *@
    <div class="flex justify-between items-center relative">
        <div>
            <h1 class="text-2xl font-bold text-gray-900">@Model.CurrentStore.StoreName</h1>
            <p class="text-sm text-gray-500">Manage your stock, products, and store appearance.</p>
        </div>

        <div class="flex items-center space-x-3">
            @* --- MESSAGES BUTTON --- *@
            <button onclick="openInboxModal()" class="relative p-2 bg-white rounded-full hover:bg-gray-100 shadow-sm transition border border-gray-200" title="Messages">
                <svg class="w-6 h-6 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path></svg>
                <span id="msgBadge" class="absolute top-0 right-0 h-3 w-3 bg-red-500 rounded-full hidden border-2 border-white"></span>
            </button>

            @* --- NOTIFICATIONS BUTTON --- *@
            <div class="relative">
                <button onclick="toggleNotifications(event)" id="notifBtn" class="relative p-2 bg-white rounded-full hover:bg-gray-100 shadow-sm transition border border-gray-200" title="Notifications">
                    <svg class="w-6 h-6 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9"></path></svg>
                    <span id="notifBadge" class="absolute top-0 right-0 h-3 w-3 bg-indigo-500 rounded-full hidden border-2 border-white"></span>
                </button>
                <div id="notifDropdown" class="hidden absolute right-0 mt-2 w-80 rounded-md shadow-2xl bg-white ring-1 ring-black ring-opacity-5 z-50 overflow-hidden">
                    <div class="px-4 py-2 bg-gray-50 border-b flex justify-between items-center">
                        <span class="text-sm font-bold text-gray-700">Notifications</span>
                        <button onclick="clearNotifications()" class="text-xs text-indigo-600 hover:text-indigo-800">Clear All</button>
                    </div>
                    <div id="notifList" class="max-h-64 overflow-y-auto p-0">
                        <div class="p-4 text-center text-xs text-gray-400">No new notifications</div>
                    </div>
                </div>
            </div>

            @* --- SARI AI MENU --- *@
            <div class="relative inline-block text-left">
                <button onclick="toggleSariMenu(event)" id="sariMenuBtn" type="button" class="bg-gradient-to-r from-pink-500 to-purple-600 text-white px-4 py-2 rounded-lg shadow-lg flex items-center gap-2 hover:scale-105 transition active:scale-95">
                    <span class="hidden sm:inline font-medium">✨ Ask Sari</span>
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path></svg>
                </button>
                <div id="sariDropdown" class="hidden absolute right-0 mt-2 w-56 rounded-md shadow-lg bg-white ring-1 ring-black ring-opacity-5 z-40">
                    <div class="py-1">
                        <button onclick="askSari('summary')" class="block w-full text-left px-4 py-2 text-sm text-gray-700 hover:bg-purple-50">📋 Inventory Summary</button>
                        <button onclick="askSari('restock')" class="block w-full text-left px-4 py-2 text-sm text-gray-700 hover:bg-purple-50">📉 Restock Suggestions</button>
                        <button onclick="askSari('design')" class="block w-full text-left px-4 py-2 text-sm text-gray-700 hover:bg-purple-50">🎨 Store Design Tips</button>
                        <button onclick="askSari('joke')" class="block w-full text-left px-4 py-2 text-sm text-gray-700 hover:bg-purple-50">😄 Tell me a Joke</button>
                    </div>
                </div>
            </div>

            @* --- ACTIONS --- *@
            <div class="relative">
                <button onclick="toggleMenuOptions(event)" id="openMenuBtn" class="px-4 py-2 bg-indigo-600 text-white font-medium rounded-lg shadow hover:bg-indigo-700 transition duration-150 ease-in-out flex items-center space-x-2">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16m-7 6h7"></path></svg>
                    <span>Menu Options</span>
                </button>
                <div id="menuOptionsModal" class="hidden absolute right-0 top-full mt-2 w-64 rounded-md shadow-2xl bg-white ring-1 ring-black ring-opacity-5 divide-y divide-gray-100 focus:outline-none z-40">
                    <div class="py-1">
                        <button onclick="openCreateModal()" class="w-full text-left px-4 py-3 text-sm text-gray-700 hover:bg-gray-100 flex items-center space-x-3">
                            <svg class="w-5 h-5 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path></svg>
                            <span>Create New Item</span>
                        </button>
                        <button onclick="openStoreSettings()" class="w-full text-left px-4 py-3 text-sm text-gray-700 hover:bg-gray-100 flex items-center space-x-3">
                            <svg class="w-5 h-5 text-pink-500" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21a4 4 0 01-4-4V5a2 2 0 012-2h4a2 2 0 012 2v12a4 4 0 01-4 4zm0 0h12a2 2 0 002-2v-4a2 2 0 00-2-2h-2.343M11 7.343l1.657-1.657a2 2 0 012.828 0l2.829 2.829a2 2 0 010 2.828l-8.486 8.485M7 17h.01"></path></svg>
                            <span>Store Settings</span>
                        </button>
                        <a href="/Shop?StoreId=@Model.CurrentStore.Id" target="_blank" class="w-full text-left px-4 py-3 text-sm text-blue-600 bg-blue-50 hover:bg-blue-100 flex items-center space-x-3">
                            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path></svg>
                            <span>View Public Storefront</span>
                        </a>
                        <button id="selectMoreToggle" class="w-full text-left px-4 py-3 text-sm text-gray-700 hover:bg-gray-100 flex items-center space-x-3 border-t border-gray-100">
                            <svg class="w-5 h-5 text-indigo-500" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2m-9 0a2 2 0 002 2h6m-6 0h6m-9 0h2m-2 0h2m7 0h2m-2 0h2m-2 2h2m-2 2h2m-2 2h2m-2 2h2"></path></svg>
                            <span>Select More Items</span>
                        </button>
                        <form method="post" asp-page-handler="ReIndex" onsubmit="return confirm('Confirm re-indexing?');">
                            <button type="submit" class="w-full text-left px-4 py-3 text-sm text-yellow-700 bg-yellow-50 hover:bg-yellow-100 flex items-center space-x-3">
                                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0l3-3m-3 3l3 3m12 6v-5h-.582m0 0a8.003 8.003 0 01-15.356-2m15.356 2l-3 3m3-3l-3-3"></path></svg>
                                <span>Re-Index Positions</span>
                            </button>
                        </form>
                        <form method="post" asp-page-handler="SeedInventory" class="border-t border-gray-100 bg-gray-50" onsubmit="showSariThinking('Stocking the shelves with goodies...')">
                            <button type="submit" class="w-full text-left px-4 py-3 text-xs font-bold text-gray-500 hover:bg-gray-200 flex items-center space-x-3 uppercase tracking-wider">
                                <span>🎲 Dev: Populate Inventory</span>
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    @* --- SARI THINKING BUBBLE --- *@
    <div id="sariThinking" class="fixed bottom-10 right-10 z-50 hidden transition-all duration-500 transform translate-y-10 opacity-0">
        <div class="bg-white border-2 border-indigo-600 rounded-tr-2xl rounded-tl-2xl rounded-bl-2xl p-4 shadow-2xl flex items-center gap-4 animate-bounce">
            <div class="bg-indigo-100 p-2 rounded-full"><span class="text-2xl">✨</span></div>
            <div>
                <p class="font-bold text-indigo-700 text-sm">Sari is thinking...</p>
                <p class="text-xs text-gray-500" id="sariThinkingText">Processing your request...</p>
            </div>
        </div>
    </div>

    @* --- MULTI SELECT BAR --- *@
    <div id="multiSelectBar" class="hidden w-full bg-indigo-50 border border-indigo-200 rounded-lg shadow-sm p-3 -mt-4 mb-4 z-10 transition-all duration-300">
        <div class="flex justify-between items-center">
            <p class="text-sm font-medium text-indigo-700"><span id="selectedCount">0</span> item(s) selected</p>
            <div class="flex items-center space-x-3">
                <form method="post" asp-page-handler="Swap" id="multiSwitchForm">
                    <input type="hidden" name="ItemsToSwitch" id="swap_item1">
                    <input type="hidden" name="ItemsToSwitch" id="swap_item2">
                    <button type="button" onclick="triggerCustomConfirm('swap')" id="multiSwitchBtn" class="px-4 py-2 bg-indigo-600 text-white font-medium rounded-lg hover:bg-indigo-700 disabled:opacity-50 transition duration-150 ease-in-out flex items-center space-x-2" disabled>
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7h12m0 0l-4-4m4 4l-4 4m0 6H4m0 0l4 4m-4-4l4-4"></path></svg>
                        <span>Switch 2 Items</span>
                    </button>
                </form>
                <form method="post" asp-page-handler="MassDelete" id="massDeleteForm">
                    <input type="hidden" name="ItemsToDelete" id="mass_delete_items">
                    <button type="button" onclick="triggerCustomConfirm('delete')" id="massDeleteBtn" class="px-4 py-2 bg-red-600 text-white font-medium rounded-lg hover:bg-red-700 disabled:opacity-50 transition duration-150 ease-in-out flex items-center space-x-2" disabled>
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path></svg>
                        <span>Mass Delete <span id="deleteCount">(0)</span></span>
                    </button>
                </form>
                <button onclick="exitMultiSelect()" class="text-indigo-700 hover:text-indigo-900 ml-2">
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path></svg>
                </button>
            </div>
        </div>
    </div>

    @* Inventory Display Grid *@
    <div id="inventoryDisplay" class="grid grid-cols-2 sm:grid-cols-3 lg:grid-cols-5 xl:grid-cols-6 gap-4 p-4 bg-white border border-gray-200 rounded-xl shadow-inner max-h-[70vh] custom-scrollbar overflow-y-auto">
        @if (Model.Items.Count == 0)
        {
            <div class="col-span-full text-center py-10">
                <div class="inline-flex items-center justify-center w-16 h-16 rounded-full bg-gray-100 mb-4">
                    <svg class="w-8 h-8 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 13V6a2 2 0 00-2-2H6a2 2 0 00-2 2v7m16 0v5a2 2 0 01-2 2H6a2 2 0 01-2-2v-5m16 0h-2.586a1 1 0 00-.707.293l-2.414 2.414a1 1 0 01-.707.293h-3.172a1 1 0 01-.707-.293l-2.414-2.414A1 1 0 006.586 13H4"></path></svg>
                </div>
                <h3 class="text-lg font-medium text-gray-900">No items found</h3>
                <p class="text-gray-500 mt-1">Use "Menu Options" to add your first item.</p>
            </div>
        }
        else
        {
            index = 0;
            @foreach (var item in Model.Items)
            {
                string base64Image = null;
                bool hasImage = item.LogoData != null && item.LogoContentType != null;
                if (hasImage) { base64Image = $"data:{item.LogoContentType};base64,{Convert.ToBase64String(item.LogoData!)}"; }
                var iconData = iconDataList[index % iconCount];

                // ADDED: data-item-cost attribute for JS usage [cite: 4]
                <div class="item-card bg-gray-50 p-3 rounded-lg border border-gray-100 hover:shadow-lg transition duration-150 ease-in-out cursor-pointer relative"
                     data-item-id="@item.Id" data-item-name="@item.Name" data-item-qty="@item.Quantity"
                     data-item-price="@item.Price" data-item-cost="@item.CostPrice" data-item-position="@item.Position"
                     onclick="handleItemClick(event, this)" oncontextmenu="handleContextMenu(event, this)">

                    <div class="h-20 w-full @(hasImage ? "p-0" : iconData.BgColor) flex items-center justify-center rounded-md mb-2 overflow-hidden">
                        @if (hasImage)
                        {
                            <img src="@base64Image" alt="@item.Name logo" class="w-full h-full object-cover" />
                        }
                        else
                        {

                            <svg class="w-10 h-10 @iconData.Color" fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" viewBox="0 0 24 24"><path d="@iconData.Path"></path></svg>
                        }
                    </div>
                    <p class="text-sm font-semibold text-gray-800 truncate">@item.Name</p>
                    <p class="text-xs text-gray-500 mb-1 truncate">@item.Category</p>
                    <div class="flex justify-between items-end">
                        <div class="text-xs text-gray-500">Stock: <span class="font-medium text-gray-700">@item.Quantity</span></div>
                        <div class="text-sm font-bold @(item.Quantity == 0 ? "text-red-600" : "text-green-600")">$@item.Price.ToString("N2")</div>
                    </div>
                    <div class="multi-select-overlay hidden absolute inset-0 bg-indigo-500 bg-opacity-10 border-4 border-transparent rounded-lg flex items-start justify-end p-2 pointer-events-none">
                        <svg class="w-6 h-6 text-indigo-600 opacity-0 transition-opacity" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path></svg>
                    </div>
                </div>
                index++;
            }
        }
    </div>
</div>

@* --- INBOX MODAL --- *@
<div id="inboxModal" class="hidden fixed inset-0 bg-gray-900 bg-opacity-60 z-50 flex items-center justify-center backdrop-blur-sm">
    <div class="bg-white rounded-xl shadow-2xl max-w-lg w-full h-[600px] flex flex-col overflow-hidden">
        <div class="px-6 py-4 bg-gray-50 border-b flex justify-between items-center">
            <h3 class="font-bold text-gray-800">Messages</h3>
            <button onclick="document.getElementById('inboxModal').classList.add('hidden')" class="text-gray-500 hover:text-gray-700">&times;</button>
        </div>
        <div id="msgContainer" class="flex-1 overflow-y-auto p-4 space-y-3 bg-gray-50"></div>
        <div class="p-4 border-t bg-white">
            <form id="replyForm" onsubmit="sendReply(event)" class="flex gap-2">
                <input type="text" id="replyInput" placeholder="Type a reply..." class="flex-1 border rounded-lg px-3 py-2 text-sm focus:outline-none focus:ring-2 focus:ring-indigo-500">
                <button type="submit" class="bg-indigo-600 text-white px-4 py-2 rounded-lg text-sm hover:bg-indigo-700">Send</button>
            </form>
        </div>
    </div>
</div>

@* --- CUSTOM CONFIRMATION MODAL --- *@
<div id="customConfirmModal" class="hidden fixed inset-0 bg-gray-900 bg-opacity-60 z-50 flex items-center justify-center backdrop-blur-sm transition-opacity">
    <div class="bg-white p-6 rounded-xl shadow-2xl max-w-sm w-full transform scale-100 transition-transform">
        <h3 id="confirmTitle" class="text-xl font-bold text-gray-800 mb-2">Confirm Action</h3>
        <p id="confirmMessage" class="text-gray-600 mb-6">Are you sure?</p>
        <div class="flex justify-end gap-3">
            <button onclick="closeCustomConfirm()" class="px-4 py-2 text-gray-600 bg-gray-100 hover:bg-gray-200 rounded-lg font-medium">Cancel</button>
            <button id="confirmActionBtn" class="px-4 py-2 text-white rounded-lg font-medium shadow-md transition-colors">Yes, Proceed</button>
        </div>
    </div>
</div>

@* --- CONTEXT MENU --- *@
<div id="contextMenu" class="hidden absolute w-48 rounded-md shadow-xl bg-white ring-1 ring-black ring-opacity-5 divide-y divide-gray-100 z-50">
    <div class="py-1">
        <button id="updateItemBtn" onclick="prepareEditDeleteModal('edit')" class="w-full text-left px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 flex items-center space-x-3">
            <svg class="w-5 h-5 text-blue-500" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-9-4l6 6m0 0l2.5-2.5m-2.5 2.5l-6-6"></path></svg>
            <span>Update Item</span>
        </button>
        <button onclick="prepareEditDeleteModal('delete')" class="w-full text-left px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 flex items-center space-x-3">
            <svg class="w-5 h-5 text-red-500" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path></svg>
            <span>Delete Item</span>
        </button>
        <button onclick="enterMultiSelectAndSelectCurrent()" class="w-full text-left px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 flex items-center space-x-3">
            <svg class="w-5 h-5 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2m-9 0a2 2 0 002 2h6m-6 0h6m-9 0h2m-2 0h2m7 0h2m-2 0h2m-2 2h2m-2 2h2m-2 2h2m-2 2h2"></path></svg>
            <span>Select More...</span>
        </button>
    </div>
</div>

<div id="storeSettingsModal" class="hidden fixed inset-0 bg-gray-900 bg-opacity-75 z-50 flex items-center justify-center">
    <div class="bg-white p-6 rounded-xl shadow-2xl max-w-md w-full">
        <h3 class="text-xl font-bold text-gray-800 mb-4">Customize Your Store</h3>
        <form method="post" asp-page-handler="UpdateStore">
            <div class="space-y-4">
                <div>
                    <label class="block text-sm font-medium text-gray-700">Store Name</label>
                    <input type="text" asp-for="StoreSettings.StoreName" value="@Model.CurrentStore.StoreName" class="mt-1 block w-full rounded-lg border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500" required>
                </div>
                <div>
                    <label class="block text-sm font-medium text-gray-700">Store Description</label>
                    <textarea asp-for="StoreSettings.Description" class="mt-1 block w-full rounded-lg border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500">@Model.CurrentStore.Description</textarea>
                </div>
                <div>
                    <label class="block text-sm font-medium text-gray-700">Theme Color</label>
                    <div class="flex items-center gap-3 mt-1">
                        <input type="color" asp-for="StoreSettings.ThemeColor" value="@Model.CurrentStore.ThemeColor" class="h-10 w-20 p-1 rounded border border-gray-300 cursor-pointer">
                        <span class="text-xs text-gray-500">Pick a color that matches your brand.</span>
                    </div>
                </div>
            </div>
            <div class="mt-6 flex justify-end space-x-3">
                <button type="button" onclick="document.getElementById('storeSettingsModal').classList.add('hidden')" class="px-4 py-2 text-sm font-medium text-gray-700 bg-gray-200 rounded-lg hover:bg-gray-300">Cancel</button>
                <button type="submit" class="px-4 py-2 text-sm font-medium text-white bg-indigo-600 rounded-lg shadow-md hover:bg-indigo-700">Save Changes</button>
            </div>
        </form>
    </div>
</div>

<div id="createItemModal" class="hidden fixed inset-0 bg-gray-900 bg-opacity-75 z-30 flex items-center justify-center">
    <div class="bg-white p-6 rounded-xl shadow-2xl max-w-lg w-full">
        <h3 class="text-xl font-bold text-gray-800 mb-4">Add New Inventory Item</h3>
        <form method="post" asp-page-handler="Add" enctype="multipart/form-data">
            <div class="space-y-4">
                <div>
                    <label for="new_name" class="block text-sm font-medium text-gray-700">Product Name</label>
                    <input type="text" asp-for="NewItem.Name" id="new_name" class="mt-1 block w-full rounded-lg border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500" placeholder="e.g., T-Shirt Black XL" required>
                </div>
                <div>
                    <label for="new_category" class="block text-sm font-medium text-gray-700">Category</label>
