@page
@model WebApplication11.Pages.DashModel
@using WebApplication11.Pages
@{
    ViewData["Title"] = "Inventory Command Center";
    // --- 1. COCKPIT STATS LOGIC ---
    var totalItems = Model.Items.Count;
    var lowStockCount = Model.Items.Count(i => i.Quantity <= 5);
    var totalInventoryValue = Model.Items.Sum(i => i.Price * i.Quantity);
    var totalPotentialProfit = Model.Items.Sum(i => (i.Price - i.CostPrice) * i.Quantity);
    // --- 2. GREETING LOGIC ---
    var hour = DateTime.Now.Hour;
    string greeting;
    if (hour < 12) greeting = "Magandang Umaga";
    else if (hour < 18) greeting = "Magandang Hapon";
    else greeting = "Magandang Gabi";

    // --- 3. ICON DATA (Existing) ---
    var iconDataList = new[] {
        new { Color = "text-indigo-600", BgColor = "bg-indigo-100", Path = "M6 2L3 6v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2V6l-3-4zM3.8 6h16.4M15 10a3 3 0 1 1-6 0" },
        new { Color = "text-green-600", BgColor = "bg-green-100", Path = "M12 20H4a2 2 0 0 1-2-2V6a2 2 0 0 1 2-2h16a2 2 0 0 1 2 2v6m-4 4h4a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2H4a2 2 0 0 0-2 2v10a2 2 0 0 0 2 2h8" },
        new { Color = "text-blue-600", BgColor = "bg-blue-100", Path = "M18 10h-2M2 14v2a2 2 0 0 0 2 2h16a2 2 0 0 0 2-2v-2M4 10a2 2 0 0 1 2-2h12a2 2 0 0 1 2 2v4a2 2 0 0 1-2 2H6a2 2 0 0 1-2-2v-4z" },
        new { Color = "text-yellow-600", BgColor = "bg-yellow-100", Path = "M6.5 1h11a.5.5 0 0 1 .5.5v11.5L12 18.5 6 13V1.5a.5.5 0 0 1 .5-.5z" }
    };
    var iconCount = iconDataList.Length;
    var index = 0;
}

@Html.AntiForgeryToken()

<div class="flex flex-col space-y-6">

    @* --- BUSINESS COCKPIT SECTION --- *@
    <div class="bg-white rounded-2xl p-6 shadow-sm border border-gray-100">
        @* Top Row: Greeting & Actions *@
        <div class="flex flex-col xl:flex-row justify-between items-start xl:items-center gap-6 mb-8">
            <div>
                <h1 class="text-3xl font-black text-gray-900 tracking-tight flex items-center gap-2">
                    @greeting, @User.Identity?.Name!
                    <span class="text-2xl animate-wave">👋</span>
                </h1>
                <p class="text-gray-500 mt-1">
                    Overview for <span class="font-bold text-indigo-600">@Model.CurrentStore.StoreName</span>
                </p>
            </div>

            <div class="flex flex-wrap items-center gap-3">
                @* --- MESSAGES BUTTON --- *@
                <button onclick="openInboxModal()" class="relative p-2.5 bg-white rounded-xl hover:bg-gray-50 border border-gray-200 text-gray-500 hover:text-indigo-600 transition" title="Messages">
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path></svg>
                    <span id="msgBadge" class="absolute top-0 right-0 h-3 w-3 bg-red-500 rounded-full hidden border-2 border-white"></span>
                </button>

                @* --- NOTIFICATIONS BUTTON --- *@
                <div class="relative">
                    <button onclick="toggleNotifications(event)" id="notifBtn" class="relative p-2.5 bg-white rounded-xl hover:bg-gray-50 border border-gray-200 text-gray-500 hover:text-indigo-600 transition" title="Notifications">
                        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9"></path></svg>
                        <span id="notifBadge" class="absolute top-0 right-0 h-3 w-3 bg-indigo-500 rounded-full hidden border-2 border-white"></span>
                    </button>
                    <div id="notifDropdown" class="hidden absolute right-0 mt-2 w-80 rounded-xl shadow-2xl bg-white ring-1 ring-black ring-opacity-5 z-50 overflow-hidden">
                        <div class="px-4 py-3 bg-gray-50 border-b flex justify-between items-center">
                            <span class="text-sm font-bold text-gray-700">Notifications</span>
                            <button onclick="clearNotifications()" class="text-xs text-indigo-600 hover:text-indigo-800 font-medium">Mark all read</button>
                        </div>
                        <div id="notifList" class="max-h-64 overflow-y-auto p-0">
                            <div class="p-4 text-center text-xs text-gray-400">No new notifications</div>
                        </div>
                    </div>
                </div>

                @* --- SARI AI MENU --- *@
                <div class="relative">
                    <button onclick="toggleSariMenu(event)" id="sariMenuBtn" type="button" class="bg-gradient-to-r from-pink-500 to-purple-600 text-white px-4 py-2.5 rounded-xl shadow-md flex items-center gap-2 hover:shadow-lg transition active:scale-95">
                        <span class="font-bold text-sm">✨ Ask Sari</span>
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path></svg>
                    </button>
                    <div id="sariDropdown" class="hidden absolute right-0 mt-2 w-56 rounded-xl shadow-xl bg-white ring-1 ring-black ring-opacity-5 z-40 overflow-hidden">
                        <div class="py-1">
                            <button onclick="askSari('summary')" class="block w-full text-left px-4 py-2.5 text-sm text-gray-700 hover:bg-purple-50 transition">📋 Inventory Summary</button>
                            <button onclick="askSari('restock')" class="block w-full text-left px-4 py-2.5 text-sm text-gray-700 hover:bg-purple-50 transition">📉 Restock Suggestions</button>
                            <button onclick="askSari('design')" class="block w-full text-left px-4 py-2.5 text-sm text-gray-700 hover:bg-purple-50 transition">🎨 Store Design Tips</button>
                            <button onclick="askSari('joke')" class="block w-full text-left px-4 py-2.5 text-sm text-gray-700 hover:bg-purple-50 transition">😄 Tell me a Joke</button>
                        </div>
                    </div>
                </div>

                @* --- QUICK ADD ITEM --- *@
                <button onclick="openCreateModal()" class="bg-indigo-600 text-white px-5 py-2.5 rounded-xl font-bold shadow-md hover:bg-indigo-700 transition flex items-center gap-2 active:scale-95">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path></svg>
                    <span class="hidden sm:inline">Add Item</span>
                </button>

                @* --- MENU OPTIONS (Existing) --- *@
                <div class="relative">
                    <button onclick="toggleMenuOptions(event)" id="openMenuBtn" class="p-2.5 bg-white border border-gray-200 text-gray-700 rounded-xl hover:bg-gray-50 transition shadow-sm">
                        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16m-7 6h7"></path></svg>
                    </button>
                    <div id="menuOptionsModal" class="hidden absolute right-0 top-full mt-2 w-64 rounded-xl shadow-2xl bg-white ring-1 ring-black ring-opacity-5 divide-y divide-gray-100 focus:outline-none z-40 overflow-hidden">
                        <div class="py-1">
                            <button onclick="openStoreSettings()" class="w-full text-left px-4 py-3 text-sm text-gray-700 hover:bg-gray-50 flex items-center space-x-3 transition">
                                <svg class="w-5 h-5 text-pink-500" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21a4 4 0 01-4-4V5a2 2 0 012-2h4a2 2 0 012 2v12a4 4 0 01-4 4zm0 0h12a2 2 0 002-2v-4a2 2 0 00-2-2h-2.343M11 7.343l1.657-1.657a2 2 0 012.828 0l2.829 2.829a2 2 0 010 2.828l-8.486 8.485M7 17h.01"></path></svg>
                                <span>Store Settings</span>
                            </button>
                            <a href="/Shop?StoreId=@Model.CurrentStore.Id" target="_blank" class="w-full text-left px-4 py-3 text-sm text-blue-600 bg-blue-50/50 hover:bg-blue-50 flex items-center space-x-3 transition">
                                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path></svg>
                                <span>View Storefront</span>
                            </a>
                            <button onclick="openAiTester()" class="w-full text-left px-4 py-3 text-sm text-indigo-700 hover:bg-indigo-50 flex items-center space-x-3 transition">
                                <span class="text-xl">📡</span>
                                <span>AI Diagnostics</span>
                            </button>
                            <button id="selectMoreToggle" class="w-full text-left px-4 py-3 text-sm text-gray-700 hover:bg-gray-50 flex items-center space-x-3 border-t border-gray-100 transition">
                                <svg class="w-5 h-5 text-indigo-500" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2m-9 0a2 2 0 002 2h6m-6 0h6m-9 0h2m-2 0h2m7 0h2m-2 0h2m-2 2h2m-2 2h2m-2 2h2"></path></svg>
                                <span>Select Multiple</span>
                            </button>
                            <form method="post" asp-page-handler="SeedInventory" class="border-t border-gray-100 bg-gray-50">
                                <button type="submit" class="w-full text-left px-4 py-3 text-xs font-bold text-gray-500 hover:bg-gray-200 flex items-center space-x-3 uppercase tracking-wider">
                                    <span>🎲 Dev: Populate</span>
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        @* --- LIVE STATS GRID --- *@
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
            <div class="p-6 rounded-2xl bg-gradient-to-br from-blue-50 to-indigo-50 border border-indigo-100 relative overflow-hidden group hover:shadow-md transition">
                <div class="absolute right-0 top-0 opacity-10 transform translate-x-4 -translate-y-4 group-hover:scale-110 transition duration-500">
                    <svg class="w-24 h-24 text-indigo-600" fill="currentColor" viewBox="0 0 20 20"><path d="M4 4a2 2 0 00-2 2v4a2 2 0 002 2V6h10a2 2 0 00-2-2H4zm2 6a2 2 0 012-2h8a2 2 0 012 2v4a2 2 0 01-2 2H8a2 2 0 01-2-2v-4s0 0 0 0zm2 0h8a2 2 0 012 2v4a2 2 0 01-2 2H8a2 2 0 01-2-2v-4a2 2 0 012-2z"></path></svg>
                </div>
                <p class="text-xs font-bold text-indigo-500 uppercase tracking-wider mb-1">Total Inventory Value</p>
                <h3 class="text-3xl font-black text-indigo-900 price-display" data-price-php="@totalInventoryValue">₱@totalInventoryValue.ToString("N2")</h3>
                <p class="text-xs text-indigo-400 mt-2 font-medium">Assets on hand</p>
            </div>

            <div class="p-6 rounded-2xl bg-gradient-to-br from-orange-50 to-red-50 border border-orange-100 relative overflow-hidden group hover:shadow-md transition">
                <div class="absolute right-0 top-0 opacity-10 transform translate-x-4 -translate-y-4 group-hover:scale-110 transition duration-500">
                    <svg class="w-24 h-24 text-orange-600" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd"></path></svg>
                </div>
                <p class="text-xs font-bold text-orange-500 uppercase tracking-wider mb-1">Restock Alerts</p>
                <h3 class="text-3xl font-black text-orange-900">@lowStockCount <span class="text-lg font-medium">Items</span></h3>
                <p class="text-xs text-orange-400 mt-2 font-medium">Stock level < 5</p>
            </div>

            <div class="p-6 rounded-2xl bg-gradient-to-br from-green-50 to-emerald-50 border border-green-100 relative overflow-hidden group hover:shadow-md transition">
                <div class="absolute right-0 top-0 opacity-10 transform translate-x-4 -translate-y-4 group-hover:scale-110 transition duration-500">
                    <svg class="w-24 h-24 text-green-600" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M12 7a1 1 0 110-2h5a1 1 0 011 1v5a1 1 0 11-2 0V8.414l-4.293 4.293a1 1 0 01-1.414 0L8 10.414l-4.293 4.293a1 1 0 01-1.414-1.414l5-5a1 1 0 011.414 0L11 10.586 14.586 7H12z" clip-rule="evenodd"></path></svg>
                </div>
                <p class="text-xs font-bold text-green-600 uppercase tracking-wider mb-1">Projected Profit</p>
                <h3 class="text-3xl font-black text-green-900 price-display" data-price-php="@totalPotentialProfit">₱@totalPotentialProfit.ToString("N2")</h3>
                <p class="text-xs text-green-500 mt-2 font-medium">If all items sold</p>
            </div>
        </div>
    </div>

    @* --- SARI THINKING BUBBLE --- *@
    <div id="sariThinking" class="fixed bottom-10 right-10 z-50 hidden transition-all duration-500 transform translate-y-10 opacity-0">
        <div class="bg-white border-2 border-indigo-600 rounded-tr-2xl rounded-tl-2xl rounded-bl-2xl p-4 shadow-2xl flex items-center gap-4 animate-bounce">
            <div class="bg-indigo-100 p-2 rounded-full"><span class="text-2xl">✨</span></div>
            <div>
                <p class="font-bold text-indigo-700 text-sm">Sari is thinking...</p>
                <p class="text-xs text-gray-500" id="sariThinkingText">Processing your request...</p>
            </div>
        </div>
    </div>

    @* --- MULTI SELECT BAR --- *@
    <div id="multiSelectBar" class="hidden w-full bg-indigo-50 border border-indigo-200 rounded-xl shadow-md p-4 -mt-4 mb-4 z-10 transition-all duration-300">
        <div class="flex justify-between items-center">
            <p class="text-sm font-bold text-indigo-800 flex items-center gap-2">
                <span class="bg-indigo-200 text-indigo-700 px-2 py-0.5 rounded text-xs">SELECTED</span>
                <span id="selectedCount" class="text-lg">0</span> item(s)
            </p>
            <div class="flex items-center space-x-3">
                <form method="post" asp-page-handler="Swap" id="multiSwitchForm">
                    <input type="hidden" name="ItemsToSwitch" id="swap_item1">
                    <input type="hidden" name="ItemsToSwitch" id="swap_item2">
                    <button type="button" onclick="triggerCustomConfirm('swap')" id="multiSwitchBtn" class="px-4 py-2 bg-white border border-indigo-200 text-indigo-700 font-bold rounded-lg hover:bg-indigo-50 disabled:opacity-50 transition flex items-center space-x-2" disabled>
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7h12m0 0l-4-4m4 4l-4 4m0 6H4m0 0l4 4m-4-4l4-4"></path></svg>
                        <span>Swap Positions</span>
                    </button>
                </form>
                <form method="post" asp-page-handler="MassDelete" id="massDeleteForm">
                    <input type="hidden" name="ItemsToDelete" id="mass_delete_items">
                    <button type="button" onclick="triggerCustomConfirm('delete')" id="massDeleteBtn" class="px-4 py-2 bg-red-600 text-white font-bold rounded-lg hover:bg-red-700 disabled:opacity-50 transition flex items-center space-x-2" disabled>
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path></svg>
                        <span>Delete <span id="deleteCount">(0)</span></span>
                    </button>
                </form>
                <button onclick="exitMultiSelect()" class="p-2 text-gray-400 hover:text-gray-600 ml-2 rounded-full hover:bg-gray-100 transition">
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path></svg>
                </button>
            </div>
        </div>
    </div>

    @* --- VIEW CONTROLS (NEW) --- *@
    <div class="flex justify-between items-end px-1">
        <h2 class="text-xl font-bold text-gray-800">Inventory Items <span class="text-gray-400 text-sm font-normal">(@totalItems total)</span></h2>

        <div class="bg-white border border-gray-200 p-1 rounded-lg flex items-center shadow-sm">
            <button onclick="switchView('grid')" id="btnGrid" class="p-2 rounded-md bg-indigo-50 text-indigo-600 shadow-sm transition-all" title="Grid View">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H6a2 2 0 01-2-2V6zM14 6a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2V6zM4 16a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H6a2 2 0 01-2-2v-2zM14 16a2 2 0 012-2h2a2 2 0 01-2 2h-2a2 2 0 01-2-2v-2z"></path></svg>
            </button>
            <button onclick="switchView('list')" id="btnList" class="p-2 rounded-md text-gray-400 hover:text-indigo-600 transition-all" title="List View">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path></svg>
            </button>
        </div>
    </div>

    @* --- LIST VIEW TABLE (NEW - Hidden by Default) --- *@
    <div id="listViewContainer" class="hidden bg-white rounded-xl shadow-sm border border-gray-200 overflow-hidden">
        <div class="overflow-x-auto">
            <table class="w-full text-left text-sm text-gray-600">
                <thead class="bg-gray-50 border-b border-gray-200 uppercase text-xs font-bold text-gray-500 tracking-wider">
                    <tr>
                        <th class="px-6 py-4">Product Name</th>
                        <th class="px-6 py-4">Category</th>
                        <th class="px-6 py-4 text-center">Stock Level</th>
                        <th class="px-6 py-4 text-right">Cost (Puhunan)</th>
                        <th class="px-6 py-4 text-right">Price (SRP)</th>
                        <th class="px-6 py-4 text-center">Actions</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-gray-100">
                    @foreach (var item in Model.Items)
                    {
                        <tr class="hover:bg-indigo-50/30 transition duration-150 group"
                            data-item-id="@item.Id" data-item-name="@item.Name" data-item-qty="@item.Quantity"
                            data-item-price="@item.Price" data-item-cost="@item.CostPrice"
                            oncontextmenu="handleContextMenu(event, this)">

                            <td class="px-6 py-4">
                                <span class="font-bold text-gray-900 block">@item.Name</span>
                            </td>
                            <td class="px-6 py-4">
                                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800 border border-gray-200">
                                    @item.Category
                                </span>
                            </td>
                            <td class="px-6 py-4 text-center">
                                @if (item.Quantity == 0)
                                {
                                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-bold bg-red-100 text-red-800">Out of Stock</span>
                                }
                                else if (item.Quantity <= 5)
                                {
                                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-bold bg-orange-100 text-orange-800">Low: @item.Quantity</span>
                                }
                                else
                                {
                                    <span class="font-medium text-gray-900">@item.Quantity</span>
                                }
                            </td>
                            <td class="px-6 py-4 text-right text-gray-500 price-display" data-price-php="@item.CostPrice">₱@item.CostPrice.ToString("N2")</td>
                            <td class="px-6 py-4 text-right font-bold text-gray-900 price-display" data-price-php="@item.Price">₱@item.Price.ToString("N2")</td>
                            <td class="px-6 py-4 text-center">
                                <button onclick="contextMenuTargetId = '@item.Id'; contextMenuTargetElement = this.closest('tr'); prepareEditDeleteModal('edit')"
                                        class="text-indigo-600 hover:text-indigo-900 font-bold text-xs hover:bg-indigo-50 px-3 py-1 rounded transition">
                                    Edit
                                </button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    @* --- GRID VIEW (Existing) --- *@
    <div id="inventoryDisplay" class="grid grid-cols-2 sm:grid-cols-3 lg:grid-cols-5 xl:grid-cols-6 gap-4 p-4 bg-white border border-gray-200 rounded-xl shadow-inner max-h-[70vh] custom-scrollbar overflow-y-auto">
        @if (Model.Items.Count == 0)
        {
            <div class="col-span-full text-center py-20">
                <div class="inline-flex items-center justify-center w-20 h-20 rounded-full bg-gray-100 mb-6">
                    <svg class="w-10 h-10 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 13V6a2 2 0 00-2-2H6a2 2 0 00-2 2v7m16 0v5a2 2 0 01-2 2H6a2 2 0 01-2-2v-5m16 0h-2.586a1 1 0 00-.707.293l-2.414 2.414a1 1 0 01-.707.293h-3.172a1 1 0 01-.707-.293l-2.414-2.414A1 1 0 006.586 13H4"></path></svg>
                </div>
                <h3 class="text-xl font-bold text-gray-900">Inventory is empty</h3>
                <p class="text-gray-500 mt-2">Use the "Add Item" button to start stocking up.</p>
            </div>
        }
        else
        {
            index = 0;
            foreach (var item in Model.Items)
            {
                string base64Image = null;
                bool hasImage = item.LogoData != null && item.LogoContentType != null;
                if (hasImage) { base64Image = $"data:{item.LogoContentType};base64,{Convert.ToBase64String(item.LogoData!)}"; }
                var iconData = iconDataList[index % iconCount];
                <div class="item-card bg-white p-3 rounded-xl border border-gray-100 shadow-sm hover:shadow-lg transition-all duration-300 ease-in-out cursor-pointer relative group"
