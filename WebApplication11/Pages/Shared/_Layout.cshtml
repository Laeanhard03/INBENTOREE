<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Inventory System</title>

    <!-- Load Inter Font (Google Font used for modern, clean typography) -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@100..900&display=swap" rel="stylesheet">

    <!-- Load Tailwind CSS CDN for modern, utility-first styling -->
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        body {
            font-family: 'Inter', sans-serif;
            background-color: #f7f9fb; /* Light background for a clean look */
        }
        /* Custom scrollbar for better aesthetics, especially for the inventory grid */
        .custom-scrollbar::-webkit-scrollbar {
            width: 8px;
        }

        .custom-scrollbar::-webkit-scrollbar-thumb {
            background: #cbd5e1; /* slate-300 */
            border-radius: 4px;
        }

        .custom-scrollbar::-webkit-scrollbar-track {
            background: #f1f5f9; /* slate-100 */
        }
    </style>

</head>
<body class="min-h-screen flex flex-col">

    <!-- Header / Navigation Bar -->
    <header class="bg-white shadow-md sticky top-0 z-10">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-3 flex justify-between items-center">
            <a asp-page="/Index" class="text-xl font-bold text-gray-800 tracking-tight">
                INVENTORY SYSTEM
            </a>
            <nav>
                <a asp-page="/Index" class="text-sm font-medium text-gray-500 hover:text-gray-900 mx-2">Dashboard</a>
                <a href="#" class="text-sm font-medium text-gray-500 hover:text-gray-900 mx-2">Reports</a>
            </nav>
        </div>
    </header>

    <!-- Main Content Area: Where Index.cshtml will be injected -->
    <main role="main" class="flex-grow pt-8 pb-10">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            @RenderBody()
        </div>
    </main>

    <!-- Footer -->
    <footer class="bg-gray-100 border-t border-gray-200 py-4 mt-auto">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center text-xs text-gray-500">
            &copy; @DateTime.Now.Year Inventory Management Solution | UI Prototype
        </div>
    </footer>

    <!-- Render any section scripts defined in child pages -->
    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>
