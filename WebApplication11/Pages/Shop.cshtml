@page
@model WebApplication11.Pages.ShopModel
@{
    var storeName = Model.StoreInfo?.StoreName ?? "Sari-Sari Marketplace";
    var themeColor = Model.StoreInfo?.ThemeColor ?? "#ea580c";
    ViewData["Title"] = storeName;
    bool isSpectatingOwnStore = User.Identity?.IsAuthenticated == true &&
                                Model.StoreInfo?.OwnerId == User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value;
}

@Html.AntiForgeryToken()

@* --- INJECT LIBRARIES --- *@
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css" />
<script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"></script>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />

<style>
    body {
        background-color: #f8fafc;
        background-image: url("data:image/svg+xml,%3Csvg width='60' height='60' viewBox='0 0 60 60' xmlns='http://www.w3.org/2000/svg'%3E%3Cg fill='none' fill-rule='evenodd'%3E%3Cg fill='%2394a3b8' fill-opacity='0.05'%3E%3Cpath d='M36 34v-4h-2v4h-4v2h4v4h2v-4h4v-2h-4zm0-30V0h-2v4h-4v2h4v4h2V6h4V4h-4zM6 34v-4H4v4H0v2h4v4h2v-4h4v-2H6zM6 4V0H4v4H0v2h4v4h2V6h4V4H6z'/%3E%3C/g%3E%3C/g%3E%3C/svg%3E");
    }

    .glass-panel {
        background: rgba(255, 255, 255, 0.85);
        backdrop-filter: blur(12px);
        -webkit-backdrop-filter: blur(12px);
        border: 1px solid rgba(255, 255, 255, 0.6);
        box-shadow: 0 8px 32px 0 rgba(31, 38, 135, 0.07);
    }

    .no-scrollbar::-webkit-scrollbar {
        display: none;
    }

    .no-scrollbar {
        -ms-overflow-style: none;
        scrollbar-width: none;
    }

    .swiper-pagination-bullet-active {
        background-color: #ea580c !important;
    }
</style>

@* --- SPECTATOR BANNER --- *@
@if (isSpectatingOwnStore)
{
    <div class="bg-indigo-900 text-white text-center py-2 text-xs font-bold uppercase tracking-wider relative z-50">
        👀 You are viewing your store as a customer.
        <a href="/Dash" class="underline hover:text-orange-400 ml-2">Return to Dashboard</a>
    </div>
}

@* === MARKETPLACE VIEW === *@
@if (Model.CurrentView == "marketplace")
{
    ViewData["HideGlobalSearch"] = "true";
    @* --- HERO SECTION --- *@
    <div class="relative w-full h-[450px] group overflow-hidden">
        <div class="swiper mySwiper w-full h-full">
            <div class="swiper-wrapper">
                <div class="swiper-slide relative">
                    <img src="https://images.unsplash.com/photo-1578916171728-46686eac8d58?q=80&w=2000&auto=format&fit=crop" class="w-full h-full object-cover" alt="Market">
                    <div class="absolute inset-0 bg-gradient-to-t from-gray-900/90 via-gray-900/50 to-transparent"></div>
                </div>
                <div class="swiper-slide relative">
                    <img src="https://images.unsplash.com/photo-1542838132-92c53300491e?q=80&w=2000&auto=format&fit=crop" class="w-full h-full object-cover" alt="Groceries">
                    <div class="absolute inset-0 bg-gradient-to-t from-gray-900/90 via-gray-900/50 to-transparent"></div>
                </div>
            </div>
            <div class="swiper-pagination"></div>
        </div>

        @* --- FLOATING SEARCH (Center Hero) --- *@
        <div class="absolute inset-0 z-20 flex flex-col items-center justify-center px-4 text-center pointer-events-none">
            <div class="pointer-events-auto w-full max-w-4xl relative z-50">
                <h1 class="text-4xl md:text-6xl font-black text-white mb-2 drop-shadow-xl tracking-tight">
                    <span class="text-orange-400">Sari-Sari</span> Marketplace
                </h1>
                <p class="text-gray-200 mb-8 text-lg font-medium drop-shadow-md">Your neighborhood favorites, delivered to your doorstep.</p>

                <div class="relative w-full max-w-2xl mx-auto">
                    <form method="get" action="/Shop" autocomplete="off" class="w-full glass-panel rounded-full p-2 flex shadow-2xl transform transition-transform hover:scale-[1.01]">

                        @* ADDED: oninput to trigger search suggestions *@
                        <input type="text" name="SearchTerm" id="heroSearchInput"
                               value="@Model.SearchTerm"
                               oninput="fetchSuggestions(this.value, 'heroSuggestionList')"
                               placeholder="What are you looking for? (e.g. 'Silver Swan')"
                               class="flex-grow bg-transparent border-none text-gray-800 placeholder-gray-600 px-6 py-3 focus:ring-0 text-lg rounded-full outline-none">

                        <button type="submit" class="bg-orange-600 hover:bg-orange-700 text-white rounded-full px-8 py-3 font-bold transition-all shadow-lg flex items-center gap-2">
                            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path></svg>
                            <span class="hidden sm:inline">Search</span>
                        </button>
                    </form>

                    @* ADDED: Dropdown for Hero Search Results *@
                    <div id="heroSearchSuggestions" class="absolute top-full left-0 w-full bg-white rounded-xl shadow-xl border border-gray-100 mt-2 hidden overflow-hidden text-left">
                        <div id="heroSuggestionList" class="flex flex-col"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    @* --- STICKY CATEGORY PILLS --- *@
    <div class="sticky top-[64px] z-30 bg-white/90 backdrop-blur-md border-b border-gray-200 py-3 mb-8 shadow-sm">
        <div class="max-w-7xl mx-auto px-4 overflow-x-auto no-scrollbar">
            <div class="flex space-x-3 whitespace-nowrap">
                <a href="/Shop" class="px-5 py-2 rounded-full @(string.IsNullOrEmpty(Model.SearchTerm) ? "bg-orange-600 text-white" : "bg-gray-100 text-gray-600 hover:bg-orange-50 hover:text-orange-600") text-sm font-bold shadow-sm transition-all transform hover:scale-105 border border-transparent">
                    🔥 All Items
                </a>
                <a href="/Shop?SearchTerm=Canned" class="px-5 py-2 rounded-full bg-gray-100 text-gray-600 text-sm font-bold hover:bg-orange-100 hover:text-orange-600 transition-colors border border-gray-200 flex items-center gap-2">
                    🥫 Canned Goods
                </a>
                <a href="/Shop?SearchTerm=Beverages" class="px-5 py-2 rounded-full bg-gray-100 text-gray-600 text-sm font-bold hover:bg-orange-100 hover:text-orange-600 transition-colors border border-gray-200 flex items-center gap-2">
                    🥤 Beverages
                </a>
                <a href="/Shop?SearchTerm=Snacks" class="px-5 py-2 rounded-full bg-gray-100 text-gray-600 text-sm font-bold hover:bg-orange-100 hover:text-orange-600 transition-colors border border-gray-200 flex items-center gap-2">
                    🍟 Snacks
                </a>
                <a href="/Shop?SearchTerm=Rice" class="px-5 py-2 rounded-full bg-gray-100 text-gray-600 text-sm font-bold hover:bg-orange-100 hover:text-orange-600 transition-colors border border-gray-200 flex items-center gap-2">
                    🍚 Rice
                </a>
            </div>
        </div>
    </div>

    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 pb-20">

        @* --- FEATURED STORES --- *@
        <div class="mb-12">
            <h2 class="text-xl font-bold text-gray-800 mb-6 flex items-center gap-2">
                <span class="bg-indigo-100 text-indigo-700 p-1.5 rounded-lg">🏪</span> Featured Stores
            </h2>
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
                @foreach (var store in Model.MarketplaceStores)
                {
                    // FIXED: Reliable Unsplash URLs for stores
                    var lastChar = store.Id.Last();
                    var storeImg = "https://images.unsplash.com/photo-1604719312566-b7cb33746955?q=80&w=800&auto=format&fit=crop";
                    storeImg = "https://images.unsplash.com/photo-1578916171728-46686eac8d58?q=80&w=800&auto=format&fit=crop"; // Default: Grocery Aisle

                    if (lastChar % 2 == 0)
                    {
                        storeImg = "https://images.unsplash.com/photo-1441986300917-64674bd600d8?q=80&w=800&auto=format&fit=crop"; // Exterior
                    }
                    else if (lastChar % 3 == 0)
                    {
                        storeImg = "https://images.unsplash.com/photo-1472851294608-4155f2118c03?q=80&w=800&auto=format&fit=crop"; // Market
                    }

                    <a href="/Shop?StoreId=@store.Id" class="block group h-full">
                        <div class="bg-white rounded-2xl shadow-sm hover:shadow-xl transition-all duration-300 border border-gray-200 overflow-hidden h-full flex flex-col relative">
                            @* Store Cover Image *@
                            <div class="h-32 relative overflow-hidden bg-gray-200">
                                <img src="@storeImg" class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-110" alt="Store Front"
                                     onerror="this.style.display='none';" />
                                <div class="absolute inset-0 bg-black/20 group-hover:bg-black/10 transition"></div>
                            </div>

                            <div class="px-5 pb-5 pt-10 relative flex-grow">
                                @* Overlapping Logo *@
                                <div class="absolute -top-10 left-5 w-20 h-20 bg-white rounded-2xl shadow-md border-4 border-white flex items-center justify-center group-hover:scale-110 transition-transform">
                                    <span class="text-3xl font-black uppercase" style="color: @store.ThemeColor">@store.StoreName.Substring(0, 1)</span>
                                </div>

                                @if (User.Identity?.IsAuthenticated == true && store.OwnerId == User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value)
                                {
                                    <span class="absolute top-2 right-2 bg-indigo-600 text-white text-[10px] font-bold px-2 py-1 rounded shadow-sm">OWNER</span>
                                }

                                <h3 class="font-bold text-gray-900 text-lg leading-tight mb-1 group-hover:text-orange-600 transition">@store.StoreName</h3>
                                <p class="text-gray-500 text-sm line-clamp-2">@store.Description</p>

                                <div class="mt-4 flex items-center gap-1 text-xs font-semibold text-green-600">
                                    <span class="w-2 h-2 rounded-full bg-green-500 animate-pulse"></span> Open Now
                                </div>
                            </div>
                        </div>
                    </a>
                }
            </div>
        </div>

        @* --- DAILY DEALS --- *@
        <div>
            <h2 class="text-xl font-bold text-gray-800 mb-6 flex items-center gap-2">
                <span class="bg-orange-100 text-orange-700 p-1.5 rounded-lg">⚡</span> Daily Needs Deals
            </h2>

            <div class="grid grid-cols-2 md:grid-cols-4 lg:grid-cols-6 gap-5">
                @{
                    // UPDATED: Sample deals with guaranteed working images to avoid generic boxes
                    var sampleDeals = new[] {
                        new { Name = "Del Monte Sauce", Brand = "Tomato Sauce", Price = 25.00, ImgUrl = "https://images.unsplash.com/photo-1584263347416-85a696b4eda7?q=80&w=400&auto=format&fit=crop", Id="p1", Stock=50 },
                        new { Name = "Lays Chips", Brand = "Classic", Price = 45.00, ImgUrl = "https://images.unsplash.com/photo-1621939514649-28b12e81658e?q=80&w=400&auto=format&fit=crop", Id="p2", Stock=20 },
                        new { Name = "Century Tuna", Brand = "Canned Goods", Price = 38.00, ImgUrl = "https://images.unsplash.com/photo-1607623814075-e51df1bdc82f?q=80&w=400&auto=format&fit=crop", Id="p3", Stock=100 },
                        new { Name = "Spam Luncheon", Brand = "Canned Meat", Price = 120.00, ImgUrl = "https://images.unsplash.com/photo-1584263347416-85a696b4eda7?q=80&w=400&auto=format&fit=crop", Id="p4", Stock=15 },
                        new { Name = "Chocolate Bar", Brand = "Sweets", Price = 15.00, ImgUrl = "https://images.unsplash.com/photo-1582058091505-f87a2e55a40f?q=80&w=400&auto=format&fit=crop", Id="p5", Stock=30 },
                        new { Name = "Skyflakes", Brand = "Crackers", Price = 8.00, ImgUrl = "https://images.unsplash.com/photo-1590080875515-8a3a8dc5735e?q=80&w=400&auto=format&fit=crop", Id="p6", Stock=60 }
                        };
                }

                @foreach (var item in sampleDeals)
                {
                    <div class="bg-white rounded-2xl p-4 border border-gray-100 shadow-sm hover:shadow-xl transition-all duration-300 group relative flex flex-col h-full group-card">
                        <div class="h-32 w-full bg-gray-50 rounded-xl mb-4 overflow-hidden relative flex items-center justify-center">
                            <img src="@item.ImgUrl" class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-125 group-hover:rotate-2 item-image-source"
                                 alt="@item.Name"
                                 onerror="this.style.display='none'; this.nextElementSibling.classList.remove('hidden');" />

                            @* Fallback Div (Hidden by default) *@
                            <div class="hidden text-6xl select-none transition-transform duration-500 group-hover:scale-125 group-hover:-rotate-6 item-image-source">📦</div>
                        </div>

                        <div class="flex flex-col flex-grow">
                            <h3 class="font-bold text-gray-900 text-sm mb-1 leading-tight line-clamp-2">@item.Name</h3>
                            <p class="text-xs text-gray-400 mb-3">@item.Brand</p>

                            <div class="mt-auto flex items-center justify-between">
                                <span class="text-base font-extrabold text-orange-600 price-display" data-price-php="@item.Price">₱@item.Price.ToString("N2")</span>

                                <button onclick="openAddToCartModal('@item.Id', '@item.Name', @item.Price, @item.Stock, this)"
                                        class="w-8 h-8 rounded-full bg-gray-100 text-gray-600 flex items-center justify-center hover:bg-orange-600 hover:text-white transition-all shadow-sm group-hover:scale-110">
                                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path></svg>
                                </button>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
}
@* === SEARCH RESULTS VIEW === *@
else if (Model.CurrentView == "search_results")
{
    <div class="max-w-7xl mx-auto mt-6 px-4">
        <div class="flex items-center gap-4 mb-6">
            <a href="/Shop" class="p-2 bg-gray-100 rounded-full hover:bg-gray-200 transition">
                <svg class="w-5 h-5 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path></svg>
            </a>
            <div>
                <h2 class="text-2xl font-black text-gray-900">Search Results</h2>
                <p class="text-gray-500">Found <span class="font-bold text-indigo-600">@Model.Products.Count</span> item(s) for "<span class="italic">@Model.SearchTerm</span>"</p>
            </div>
        </div>

        @if (Model.Products.Count == 0)
        {
            <div class="text-center py-20 bg-white rounded-3xl border border-gray-100 shadow-sm">
                <div class="text-6xl mb-4">🔍</div>
                <h3 class="text-xl font-bold text-gray-800">No matches found</h3>
                <p class="text-gray-500 mb-6">Try checking your spelling or search for a generic term like "Snacks".</p>
                <a href="/Shop" class="text-indigo-600 font-bold hover:underline">View all items</a>
            </div>
        }
        else
        {
            <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-5 gap-6">
                @foreach (var item in Model.Products)
                {
                    // --- 1. SETUP IMAGES (Search View) ---
                    string base64Image = null;
                    bool hasImage = item.LogoData != null;
                    if (hasImage)
                    {
                        base64Image = $"data:{item.LogoContentType};base64,{Convert.ToBase64String(item.LogoData!)}";
                    }

                    // Default Fallback: Generic Grocery Basket
                    string categoryImgUrl = "https://images.unsplash.com/photo-1542838132-92c53300491e?q=80&w=400&auto=format&fit=crop";

                    if (!string.IsNullOrEmpty(item.Category) || !string.IsNullOrEmpty(item.Name))
                    {
                        var searchStr = (item.Category + " " + item.Name).ToLower();

                        if (searchStr.Contains("household") || searchStr.Contains("cleaning") || searchStr.Contains("detergent") || searchStr.Contains("soap") || searchStr.Contains("ariel") || searchStr.Contains("tide") || searchStr.Contains("surf") || searchStr.Contains("downy"))
                        {
                            // 🧼 Cleaning / Detergent
                            categoryImgUrl = "https://images.unsplash.com/photo-1585232561025-9f6336a8d753?q=80&w=400&auto=format&fit=crop";
                        }
                        else if (searchStr.Contains("confectionery") || searchStr.Contains("candy") || searchStr.Contains("sweet") || searchStr.Contains("chocolate"))
                        {
                            // 🍬 Sweets / Confectionery
                            categoryImgUrl = "https://images.unsplash.com/photo-1582058091505-f87a2e55a40f?q=80&w=400&auto=format&fit=crop";
                        }
                        else if (searchStr.Contains("canned") || searchStr.Contains("sardines") || searchStr.Contains("corned") || searchStr.Contains("spam") || searchStr.Contains("tuna") || searchStr.Contains("ligo"))
                        {
                            categoryImgUrl = "https://images.unsplash.com/photo-1584263347416-85a696b4eda7?q=80&w=400&auto=format&fit=crop";
                        }
                        else if (searchStr.Contains("noodle") || searchStr.Contains("ramen") || searchStr.Contains("pancit") || searchStr.Contains("canton"))
                        {
                            categoryImgUrl = "https://images.unsplash.com/photo-1612929633738-8fe44f7ec841?q=80&w=400&auto=format&fit=crop";
                        }
                        else if (searchStr.Contains("snack") || searchStr.Contains("chips") || searchStr.Contains("chichirya") || searchStr.Contains("cracker"))
                        {
                            categoryImgUrl = "https://images.unsplash.com/photo-1621939514649-28b12e81658e?q=80&w=400&auto=format&fit=crop";
                        }
                        else if (searchStr.Contains("drink") || searchStr.Contains("beverage") || searchStr.Contains("soda") || searchStr.Contains("coke") || searchStr.Contains("soft") || searchStr.Contains("juice"))
                        {
                            categoryImgUrl = "https://images.unsplash.com/photo-1622483767028-3f66f32aef97?q=80&w=400&auto=format&fit=crop";
                        }
                        else if (searchStr.Contains("water") || searchStr.Contains("tubig"))
                        {
                            categoryImgUrl = "https://images.unsplash.com/photo-1560023907-5f339617ea30?q=80&w=400&auto=format&fit=crop";
                        }
                        else if (searchStr.Contains("rice") || searchStr.Contains("bigas") || searchStr.Contains("grain"))
                        {
                            categoryImgUrl = "https://images.unsplash.com/photo-1586201375761-83865001e31c?q=80&w=400&auto=format&fit=crop";
                        }
                        else if (searchStr.Contains("vegetable") || searchStr.Contains("gulay") || searchStr.Contains("fruit") || searchStr.Contains("onion"))
                        {
                            categoryImgUrl = "https://images.unsplash.com/photo-1518843875459-f738682238a6?q=80&w=400&auto=format&fit=crop";
                        }
                        else if (searchStr.Contains("meat") || searchStr.Contains("chicken") || searchStr.Contains("pork") || searchStr.Contains("fish"))
                        {
                            categoryImgUrl = "https://images.unsplash.com/photo-1607623814075-e51df1bdc82f?q=80&w=400&auto=format&fit=crop";
                        }
                        else if (searchStr.Contains("condiment") || searchStr.Contains("sauce") || searchStr.Contains("vinegar") || searchStr.Contains("oil"))
                        {
                            categoryImgUrl = "https://images.unsplash.com/photo-1627485937980-221c88ac04f9?q=80&w=400&auto=format&fit=crop";
                        }
                    }

                    <div class="bg-white rounded-2xl p-4 border border-gray-100 shadow-sm hover:shadow-2xl transition-all duration-500 flex flex-col group h-full relative group-card">
                        @if (item.Quantity == 0)
                        {
                            <div class="absolute inset-0 bg-white/80 z-20 flex items-center justify-center rounded-2xl">
                                <span class="bg-red-600 text-white font-bold px-4 py-2 rounded-lg transform -rotate-12 shadow-xl">SOLD OUT</span>
                            </div>
                        }

                        <div class="h-40 w-full bg-gray-50 rounded-xl mb-4 overflow-hidden relative flex items-center justify-center">
                            @if (hasImage)
                            {
                                <img src="@base64Image" alt="@item.Name"
                                     class="w-full h-full object-cover group-hover:scale-110 group-hover:rotate-2 transition-transform duration-700 item-image-source"
                                     onerror="this.style.display='none'; this.nextElementSibling.classList.remove('hidden');" />
                                <img src="@categoryImgUrl" alt="Category Fallback"
                                     class="hidden w-full h-full object-cover group-hover:scale-110 group-hover:rotate-2 transition-transform duration-700 item-image-source" />
                            }
                            else
                            {
                                <img src="@categoryImgUrl" alt="@item.Category"
                                     class="w-full h-full object-cover group-hover:scale-110 group-hover:rotate-2 transition-transform duration-700 item-image-source" />
                            }
                        </div>

                        <div class="flex flex-col flex-grow">
                            <h3 class="font-bold text-gray-900 text-sm mb-1 leading-tight line-clamp-2 group-hover:text-orange-600 transition-colors">@item.Name</h3>
                            <p class="text-xs text-gray-400 mb-3 font-medium">@item.Category</p>
                            <div class="mt-auto flex items-center justify-between">
                                <span class="text-lg font-extrabold text-orange-600 price-display" data-price-php="@item.Price">₱@item.Price.ToString("N2")</span>
                                <button onclick="openAddToCartModal('@item.Id', '@item.Name', @item.Price, @item.Quantity, this)"
                                        class="w-10 h-10 rounded-full bg-orange-50 text-orange-600 flex items-center justify-center hover:bg-orange-600 hover:text-white transition-all shadow-sm group-hover:scale-110 active:scale-95"
                                        @(item.Quantity == 0 ? "disabled" : "")>
                                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path></svg>
                                </button>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
    </div>
}
else if (Model.StoreInfo != null)
{
    @* === SPECIFIC STORE VIEW === *@

    @* --- STORE HEADER --- *@
    <div class="bg-white/80 backdrop-blur-md sticky top-[64px] z-30 border-b border-gray-200 shadow-sm mb-8 -mx-4 sm:-mx-6 lg:-mx-8 px-4 sm:px-6 lg:px-8 py-6">
        <div class="max-w-7xl mx-auto flex flex-col md:flex-row justify-between items-center gap-4">
            <div class="flex items-center gap-4">
                <div class="w-16 h-16 rounded-2xl flex items-center justify-center text-white text-3xl font-bold shadow-lg transform -rotate-3" style="background-color: @themeColor">
                    @Model.StoreInfo.StoreName.Substring(0, 1)
                </div>
                <div>
                    <h1 class="text-2xl font-extrabold text-gray-900 tracking-tight leading-none">@Model.StoreInfo.StoreName</h1>
                    <p class="text-gray-500 text-sm mt-1 flex items-center gap-1">
                        <span class="w-2 h-2 bg-green-500 rounded-full"></span> Online • @Model.StoreInfo.Description
                    </p>
                </div>
            </div>

            <div class="flex items-center gap-3">
                @if (Model.CurrentView == "shop")
                {
                    <a href="/Shop" class="text-sm font-bold text-gray-600 hover:text-orange-600 bg-gray-100 px-5 py-2.5 rounded-full transition">
                        Marketplace
                    </a>
